<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AworldAction" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="register_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:text">@string/register_btn</item>
    </style>

    <style name="login_btn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/green</item>
        <item name="android:text">@string/login_btn</item>
    </style>

    <style name="view_title_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/top_menu_bg</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="view_detail_title_area">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@color/light_green</item>
        <item name="android:paddingTop">8dp</item>
    </style>

    <style name="item_campaign_title_area">
        <item name="android:background">@drawable/item_campaign_title</item>
    </style>

    <style name="back_icon_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@color/transparent</item>
        <item name="tint">@color/white</item>
        <item name="contentDescription">back</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:src">@drawable/ic_baseline_arrow_left_24</item>
    </style>

    <style name="view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">28dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="login_view_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>

    <style name="login_edittext_user" parent="login_view_item">
        <item name="android:background">@drawable/text_field_bg</item>
        <item name="android:hint">@string/login_user_hint</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="login_edittext_password" parent="login_view_item">
        <item name="android:background">@drawable/text_field_bg</item>
        <item name="android:hint">@string/login_password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="login_next_btn" parent="login_view_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="backgroundTint">@color/light_green</item>
        <item name="android:text">@string/next</item>
    </style>

    <style name="text_status">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="text_link">
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="sub_head">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
</resources>